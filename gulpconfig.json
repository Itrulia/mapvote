{
  "paths": {
    "styles": {
      "app": ["app/styles/*.scss"],
      "watch": ["app/styles/**/*.scss"],
      "dist": "dist/styles"
    },
    "typescript": {
      "app": "app/scripts",
      "vendor": [
        "node_modules/core-js/client/shim.min.js",
        "node_modules/zone.js/dist/zone.js",
        "node_modules/reflect-metadata/Reflect.js"
      ],
      "watch": [
        "app/scripts/**/*.ts",
        "app/scripts/**/*.html"
      ],
      "dist": "dist/scripts"
    },
    "images": {
      "app": ["app/images/**/*"],
      "watch": ["app/images/**/*"],
      "dist": "dist/images"
    },
    "templates": {
      "app": ["app/200.html"],
      "watch": ["app/200.html"],
      "dist": "dist"
    }
  }
}